.sidebar
  position fixed
  top 0
  bottom 0
  left 0
  width 220px
  overflow-y auto
  min-height 100%
  background-color #333
  .logo
    display block
    height 75px
    background #222222
    box-shadow 0 2px 4px 0 rgba(0,0,0,.4)
    color #FFF
    font-size 25px
    text-align center
    line-height 66px
  .routes
    padding 5px 0
    background-color #333
    ul
      padding 0
      margin 10px 0
      li
        a
          display block
          padding 15px 20px
          font-size 17px
          color #ebdac1
          span
            padding-right 10px
        &:hover
          background #3d3d3d
          a
            color #ffa114